
@{
    ViewData["Title"] = "Share";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Link</h4>
        <input class="form-control" type="text" placeholder="https://getbootstrap.com/docs/4.0/components/forms/" readonly />
        <button class="btn btn-primary">Copy</button>
        <br />
        <h4>Email</h4>
        <form>
            <div class="form-group">
                <input class="form-control" type="email" name="email" id="email" placeholder="Email Address" />
                <br />
                <input class="form-control" type="text" name="subject" id="subject" placeholder="Subject" />
                <br />
                <input class="form-control" type="text" name="message" id="message" placeholder="Message" />
            </div>
            <button class="btn btn-primary">Send</button>
        </form>
    </div>
</div>