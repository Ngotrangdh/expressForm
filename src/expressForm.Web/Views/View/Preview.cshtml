@model List<expressForm.Web.Controllers.AnswerViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Preview - ExpressForm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #e5f6fe;" >
    <div class="container">
        <main role="main" class="py-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-controller="view" asp-action="preview" asp-route-responseId="1">
                        <div class="card mb-3">
                            <div class="card-header" style="background-color: #067cb3">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@Model[1].Question.Form.Title</h5>
                                <p class="card-text">@Model[1].Question.Form.Description</p>
                            </div>
                        </div>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label class="control-label">
                                            @Model[i].Question.Text
                                        <span class="text-danger">
                                            @(Model[i].Question.IsRequired ? "*" :string.Empty)
                                        </span>
                                    </label>
                                        <input type="hidden" asp-for="@Model[i].Question.Id"  />
                                    @if (Model[i].Question.Type == QuestionTypeViewModel.ShortAnswer)
                                    {
                                        <input asp-for="@Model[i].Text" class="form-control">
                                    }
                                    else if (Model[i].Question.Type == QuestionTypeViewModel.Paragraph)
                                    {
                                        <textarea asp-for="@Model[i].Text" class="form-control" rows="3"></textarea>
                                    }
                                    else if (Model[i].Question.Type == QuestionTypeViewModel.Dropdown)
                                    {
                                        <select class="form-control"
                                                asp-for="@Model[i].Text"
                                                asp-items="@Model[i].Question.Options.Select(o => new SelectListItem { Text = o.ToString()})">
                                        </select>
                                    }
                                    else if (Model[i].Question.Type == QuestionTypeViewModel.Date)
                                    {
                                        <input asp-for="@Model[i].Text" type="date" class="form-control">
                                    }
                                    else if (Model[i].Question.Type == QuestionTypeViewModel.Checkboxes)
                                    {
                                        @for (int j = 0; j < Model[i].Question.Options.Count; j++)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" asp-for="@Model[i].Text" value="@Model[i].Question.Options[j]">
                                                <label class="form-check-label" for="@Model[i].Question.Id">
                                                    @Model[i].Question.Options[j]
                                                </label>
                                            </div>
                                        }
                                    }
                                    else if (Model[i].Question.Type == QuestionTypeViewModel.MutipleChoice)
                                    {
                                        @for (int h = 0; h < Model[i].Question.Options.Count; h++)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" asp-for="@Model[i].Text" value="@Model[i].Question.Options[h]">
                                                <label class="form-check-label" for="@Model[i].Question.Id">
                                                    @Model[i].Question.Options[h]
                                                </label>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ExpressForm - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
